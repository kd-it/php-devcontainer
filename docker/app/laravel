#!/bin/sh
REAL_LARAVEL=$HOME/.composer/vendor/bin/laravel

# 本来のlaravelに対するラッパースクリプト
# 授業配布のディレクトリはすでに内容が入っているため、必要であれば他のディレクトリで初期状態をつくってマージしないといけない
# そのためのスクリプトとなっている

# 第1引数が"new"以外であればそのまま動かす
if [ ! "z$1" = "znew" ]; then
    exec ${REAL_LARAVEL} "$@"
fi

# 最後の引数をディレクトリとみなして、一度変数DESTに取り出しておく
DEST="${@: -1}"

# 対象ディレクトリが空っぽであれば、本来のcomposerにそのまま仕事を任せる
if [ ! -d ${DEST} ]; then
    exec ${REAL_LARAVEL} "$@"
fi

WORKDIR=$(mktemp -d -u)

# DESTを絶対パスにして置き直す
DEST=$(cd ${DEST} && pwd)

# 引数の数を取得
num_args=$#

# 最後の引数を取り除いた引数リストを作成
new_args=""
count=1

for arg in "$@"; do
    if [ $count -lt $num_args ]; then
        new_args="$new_args $arg"
    fi
    count=$((count + 1))
done

set -e
cd $(dirname ${WORKDIR})
${REAL_LARAVEL} $new_args $(basename ${WORKDIR})
set +e

cd $WORKDIR
rm -fr vendor
# .envファイルをgitに含められるように.gitignoreを変更
sed -ie '/^\.env.*/d' .gitignore && cat <<EOM >> /dev/stderr && sleep 3
============ 重要な注意 ============
.envファイルをgitに含めるように.gitignoreを変更しました。
本来の設計において、このようなセキュリティ上の問題を伴う変更はよくありません。
あくまで授業用の都合でこうなっていることを理解しておいてください。
============ /重要な注意 ============
EOM
cp -rf . ${DEST}
cd ${DEST}
composer install
